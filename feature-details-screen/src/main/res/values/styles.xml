<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:color">@color/black</item>
        <item name="alpha">0.5</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
    </style>

    <style name="ColorChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="chipCornerRadius">20dp</item>
        <item name="icon">@drawable/ic_check_mark</item>
    </style>

    <style name="CapacityChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="fontWeight">700</item>
        <item name="chipCornerRadius">10dp</item>
        <item name="android:textAppearance">@style/TextAppearanceCapacityChip</item>
        <item name="android:textAlignment">center</item>
        <item name="chipBackgroundColor">@color/background_capacity_chip</item>
        <item name="android:textColor">@color/text_capacity_chip</item>
    </style>

    <style name="TextAppearanceCapacityChip">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="ProductDetailButtonText">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
    </style>

    <style name="ProductDetailButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/ProductDetailButtonText</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>