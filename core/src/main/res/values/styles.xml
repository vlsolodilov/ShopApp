<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NormalText">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mark_pro</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="ColoredNormalText" parent="NormalText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="MediumText" parent="NormalText">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="BoldText" parent="NormalText">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="HintAppearance">
        <item name="fontFamily">@font/mark_pro</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/dark_blue</item>
    </style>

    <style name="ButtonText">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/ButtonText</item>
        <item name="backgroundTint">@color/orange</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SmallText" parent="NormalText">
        <item name="android:textColor">#B7B7B7</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>